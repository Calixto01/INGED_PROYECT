<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bguniversal"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/background">

        <ImageView
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_gravity="center"
            android:src="@drawable/bguniversal2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lineabotonsesion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/background"
        >

        <Button
            android:id="@+id/sesioniniciar"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:backgroundTint="#C23A3A"
            android:text="Iniciar Sesion"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="350dp"
            app:cornerRadius="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tienes cuenta?"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Aqui"
                android:textColor="#C23A3A"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:clickable="true"
                />

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>